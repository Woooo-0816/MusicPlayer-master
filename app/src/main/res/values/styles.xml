<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- define by huwei -->
    <style name="SweetTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:windowBackground">@color/f1f3f4</item>
        <item name="android:textColorPrimary">@color/primary_text_white</item>
        <item name="android:textColorSecondary">@color/secondary_text_white</item>
        <item name="android:textViewStyle">@style/SweetTheme.TextView</item>
        <item name="android:buttonStyle">@style/SweetTheme.ButtonStyle</item>
        <!--menu-->
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--溢出菜单样式 -->

    <style name="SweetTheme.TextView" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="secondTextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textViewWhite" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primary_text_white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="secondTextViewWhite">
        <item name="android:textColor">@color/secondary_text_white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SweetTheme.ButtonStyle" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:padding">8dp</item>
    </style>


    <!-- bottom_action_bar -->
    <style name="CommonButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">@dimen/bottom_action_bar_item_padding_left_right</item>
    </style>

    <!-- song_listitem -->

    <style name="catalog">
        <!--<item name="android:padding">8dp</item>-->
        <item name="android:textColor">@color/primary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="scanbottombar">
        <item name="android:background">@color/primary</item>
    </style>

    <!--menu-->

    <style name="lrc_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <!--<item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>-->
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>